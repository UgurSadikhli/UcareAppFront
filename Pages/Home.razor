<style>
    .img-hover {
        transition: transform 0.3s ease-in-out;
    }

    .img-hover:hover {
        transform: scale(1.1);
        cursor: pointer;
    }

    .card {
        transition: transform 0.3s ease-in-out;
    }

    .card:hover {
        transform: translateY(-10px);
    }

    .animate__animated {
        animation-duration: 1s;
        animation-delay: 0.2s;
    }

    .navigate-btn {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .navigate-btn:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }



   .custom-btn {
        border: 2px solid black;
        background-color: transparent;
        color: black;
        font-size: 1.25rem;
        padding: 10px 30px;
        position: relative;
        overflow: hidden;
        text-align: center;
        transition: color 0.4s ease-in-out, border-color 0.4s ease-in-out;
    }

    .custom-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background-color: black;
        transition: left 0.4s ease-in-out;
        z-index: -1;
    }

    .custom-btn:hover::before {
        left: 0;
    }

    .custom-btn:hover {
        color: white;
        border-color: black;
    }

    .custom-btn span {
        position: relative;
        display: inline-block;
        transition: transform 0.4s ease-in-out;
    }

    .custom-btn::after {
        content: "Get Started →";
        position: absolute;
        top: 50%;
        left: 170%;
        width: 100%;
        transform: translateX(-2%) translateY(-50%);
        color: white;
        background-color: black;
        padding: 10px 20px;
        border: 2px solid black;
        border-radius: 5px;
        transition: left 0.4s ease-in-out;
        white-space: nowrap;
    }

    .custom-btn:hover::after {
        left: 10px;
    }
</style>
